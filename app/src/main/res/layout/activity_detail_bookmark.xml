<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FF"
    tools:context=".DetailBookmarkActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main3"
        android:elevation="8dp"
        android:theme="@style/MyThemeOverlay_Toolbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardBookmark"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@drawable/border_item_data"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar2">

        <TextView
            android:id="@+id/tvCountryBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting Data...."
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContinentBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting Data...."
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/tvCountryBookmark"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_delete"
            android:text="Delete"
            android:backgroundTint="@color/main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4Bookmark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:text="Population"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardBookmark" />

    <TextView
        android:id="@+id/textView5Bookmark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="25dp"
        android:text="Today Case"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4Bookmark" />

    <TextView
        android:id="@+id/textView6Bookmark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="25dp"
        android:text="Total Case"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5Bookmark" />

    <TextView
        android:id="@+id/textView7Bookmark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="25dp"
        android:text="Critical"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6Bookmark" />

    <TextView
        android:id="@+id/textView8Bookmark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="25dp"
        android:text="Death"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7Bookmark" />

    <TextView
        android:id="@+id/textView9Bookmark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="25dp"
        android:text="Recovered"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8Bookmark" />

    <TextView
        android:id="@+id/tvPopulationBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=":   Getting Data..."
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView4Bookmark"
        app:layout_constraintTop_toBottomOf="@+id/cardBookmark" />

    <TextView
        android:id="@+id/tvTodayCaseBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text=":   Getting Data..."
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView5Bookmark"
        app:layout_constraintTop_toBottomOf="@+id/tvPopulationBookmark" />

    <TextView
        android:id="@+id/tvTotalCaseBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text=":   Getting Data..."
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView6Bookmark"
        app:layout_constraintTop_toBottomOf="@+id/tvTodayCaseBookmark" />

    <TextView
        android:id="@+id/tvCriticalBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text=":   Getting Data..."
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView7Bookmark"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalCaseBookmark" />

    <TextView
        android:id="@+id/tvDeathBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text=":   Getting Data..."
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView8Bookmark"
        app:layout_constraintTop_toBottomOf="@+id/tvCriticalBookmark" />

    <TextView
        android:id="@+id/tvRecoveredBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text=":   Getting Data..."
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView9Bookmark"
        app:layout_constraintTop_toBottomOf="@+id/tvDeathBookmark" />

    <!--    <com.anychart.anychart.AnyChartView-->
